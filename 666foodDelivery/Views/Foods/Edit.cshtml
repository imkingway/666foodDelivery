@model _666foodDelivery.Models.Food

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<center>
    <div class="ui card">
        <div class="image" style="width:inherit; height:inherit">
            <img src=@Html.DisplayFor(model => model.BlobURL)>
        </div>
    </div>
</center>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Foods" asp-action="EditImage">
            <input type="hidden" name="imageProductId" value="@Model.ID" />
            <div class="form-group">
                <label>Upload New Image</label>
                <input class="form-control" name="files" type="file" />
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Submit" />
            </div>
        </form>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodProducedDate" class="control-label"></label>
                <input asp-for="FoodProducedDate" class="form-control" />
                <span asp-validation-for="FoodProducedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient" class="control-label"></label>
                <input asp-for="Ingredient" class="form-control" />
                <span asp-validation-for="Ingredient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlobURL" class="control-label"></label>
                @if (@ViewData["BlobUrl"] == null)
                {
                    <input asp-for="BlobURL" class="form-control" value="@Model.BlobURL" readonly />
                }
                else
                {
                    <input asp-for="BlobURL" class="form-control" value="@ViewData["BlobUrl"]" readonly />
                }
                <span asp-validation-for="BlobURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

