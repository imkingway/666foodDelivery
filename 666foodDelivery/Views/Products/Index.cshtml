@model IEnumerable<_666foodDelivery.Models.Food>

@{
    ViewData["Title"] = "Products";
}

<h2>Foods</h2>

<div class="cards-container">
    @foreach (var item in Model)
    {
        <div class="card" style="height: 450px;width: 500px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);padding: 16px;text-align: center;background-color: #f1f1f1;float:left;">
            <div class="card-img">
                <img src=@Html.DisplayFor(model => item.BlobURL) alt=@Html.DisplayFor(model => item.FoodName) style="width:230px; height: 200px; padding-top: 10px"/>
            </div>
            <h1>@Html.DisplayFor(model => item.FoodName)</h1>
            <div class="card-body">
                <h2>Price: @Html.DisplayFor(model => item.Price)</h2>
                <h2>Ingredient: @Html.DisplayFor(model => item.Ingredient)</h2>
            </div>
        </div>
    }
</div>