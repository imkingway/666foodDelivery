
@{
    ViewData["Title"] = "Received Orders";
}

<h1>Available Orders</h1>

<table border="1">     
    <tr>
        <th>No.</th>
        <th>Customer Name</th>
        <th>Address</th>
        <th>PhoneNumber</th>
        <th>FoodName</th>
        <th>DeliverTime</th>
        <th>Quantity</th>
        <th>Accept</th>
    </tr>     
    @{int i = 0;}     
    @foreach (var order in ViewBag.messages)
{<tr>
    <td>@ViewBag.sequence[i]</td>
    <td>@order.CustomerName</td>
    <td>@order.Address</td>
    <td>@order.PhoneNumber</td>
    <td>@order.FoodName</td>
    <td>@order.DeliverTime</td>
    <td>@order.quantity</td>
    <td>
       
        <a asp-route-sequence="@ViewBag.sequence[i]" asp-route-customerData="@order"  asp-controller="Orders" asp-action="Approve">
            <button>Accept Orders</button>
        </a>
    </td>
</tr>i++;
} </table>