@model _666foodDelivery.Models.Order

@{
    ViewData["Title"] = "Index";
}
<h1>Online Food Ordering System</h1>

<h4>Please Select Food From Menu</h4>
<p>Current line: @ViewBag.MessageCount</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodID" class="control-label"></label>
                <select asp-for="FoodID" asp-items="@(new SelectList(ViewBag.message, "ID", "FoodName"))" class="form-control"> </select>
                <span asp-validation-for="FoodID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliverTime" class="control-label"></label>
                <input asp-for="DeliverTime" class="form-control " />
                <span asp-validation-for="DeliverTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
