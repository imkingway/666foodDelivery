@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<head>
    <title>Semantic UI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
</head>

    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger">
            <div class="ui placeholder segment">
                <div class="ui two column very relaxed stackable grid">
                    <div class="column">
                        <div class="ui form">
                            <h1>@ViewData["Title"]</h1>
                            <div class="field">
                                <label asp-for="Input.Email"></label>
                                <div class="ui left icon input">
                                    <input asp-for="Input.Email" class="ui input" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <i class="user icon"></i>
                                </div>
                            </div>
                            <div class="field">
                                <label asp-for="Input.Password"></label>
                                <div class="ui left icon input">
                                    <input asp-for="Input.Password" class="ui input" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="ui primary button">Log in</button>
                            </div>
                            <div class="form-group">
                                <p>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="middle aligned column">
                        <div class="ui big button" style=" margin-left: 160px">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup icon">Sign Up</a>
                        </div>
                        <div class="ui big button" style=" margin-left: 120px; margin-top: 10px">
                            <a asp-controller="Admin" asp-action="Login">Login as an Admin</a>
                        </div>
                    </div>
                </div>
                <div class="ui vertical divider">
                    Or
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
    <style>
    body { background-image: url('https://image.freepik.com/free-vector/lineart-fast-food-pattern_67419-7.jpg'); }
    </style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
